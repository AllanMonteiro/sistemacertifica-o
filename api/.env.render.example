# Banco PostgreSQL gratuito (ex.: Neon/Supabase)
DATABASE_URL=postgresql+psycopg://usuario:senha@host:5432/database

# Segurança JWT
JWT_SECRET=trocar_por_valor_forte
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=480

# CORS (pode informar múltiplas origens separadas por vírgula)
CORS_ORIGINS=https://seu-web.onrender.com,http://localhost:5173

# Storage S3 compatível (ex.: Cloudflare R2, MinIO, AWS S3)
S3_ENDPOINT=https://<accountid>.r2.cloudflarestorage.com
S3_ACCESS_KEY=seu_access_key
S3_SECRET_KEY=seu_secret_key
S3_BUCKET=evidencias
S3_REGION=auto

# Se true, API falha no startup se não conseguir acessar bucket
S3_STRICT_STARTUP=false
